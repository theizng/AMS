<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.PaymentMeterEntryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ghi số điện / nước">

    <ScrollView>
        <VerticalStackLayout Padding="14" Spacing="12">

            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="8">
                    <Label Style="{DynamicResource TextPrimary}" Text="Nguồn dữ liệu" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                        <Entry Style="{DynamicResource TextPrimary}"
                               Grid.Column="0"
                               Placeholder="URL Google Sheet hoặc trống nếu dùng file"
                               Text="{Binding SheetUrl}" />
                        <Button Style="{DynamicResource TextPrimary}" Grid.Column="1" Text="Nhập URL" Command="{Binding EnterUrlCommand}" />
                        <Button Style="{DynamicResource TextPrimary}" Grid.Column="2" Text="Chọn file" Command="{Binding PickFileCommand}" />
                    </Grid>
                    <HorizontalStackLayout Spacing="8">
                        <Button Style="{DynamicResource TextPrimary}" Text="Đồng bộ" Command="{Binding SyncCommand}" BackgroundColor="#E3F2FD" />
                        <Button Style="{DynamicResource TextPrimary}" Text="Xác nhận chỉ số" Command="{Binding ConfirmCommand}" BackgroundColor="#E8F5E9" />
                        <Button Style="{DynamicResource TextPrimary}" Text="Chuyển kỳ" Command="{Binding RollForwardCommand}" BackgroundColor="#FFF3CD" />
                    </HorizontalStackLayout>
                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding SourceInfo}" FontSize="12" TextColor="#607D8B" />
                </VerticalStackLayout>
            </Frame>

            <!-- Electric -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" Padding="0,6">
                        <Label Style="{DynamicResource TextPrimary}" Text="Điện" FontAttributes="Bold" FontSize="18" Grid.Column="0" />
                        <Label Style="{DynamicResource TextPrimary}" Text="Chỉ số tháng trước" FontAttributes="Bold" FontSize="18" Grid.Column="1" />
                        <Label Style="{DynamicResource TextPrimary}" Text="Chỉ số hiện tại" FontAttributes="Bold" FontSize="18" Grid.Column="2" />
                    </Grid>
                    <CollectionView ItemsSource="{Binding MeterRows}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" WidthRequest="100"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="1" Text="{Binding PreviousElectric}" IsEnabled="False" WidthRequest="120"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="2" Text="{Binding CurrentElectric}" Keyboard="Numeric"
                                           WidthRequest="120"
                                           IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEditCurrent}" />
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="3" Text="{Binding ConsumptionElectric, StringFormat='Tổng {0} kWh'}" WidthRequest="140"/>
                                    <Button Style="{DynamicResource TextPrimary}" Grid.Column="4" Text="Lưu"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SaveRowCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Water -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" Padding="0,6">
                        <Label Style="{DynamicResource TextPrimary}" Text="Nước" FontAttributes="Bold" FontSize="18" Grid.Column="0" />
                        <Label Style="{DynamicResource TextPrimary}" Text="Chỉ số tháng trước" FontAttributes="Bold" FontSize="18" Grid.Column="1" />
                        <Label Style="{DynamicResource TextPrimary}" Text="Chỉ số hiện tại" FontAttributes="Bold" FontSize="18" Grid.Column="2" />
                    </Grid>
                    <CollectionView ItemsSource="{Binding MeterRows}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" WidthRequest="100"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="1" Text="{Binding PreviousWater}" IsEnabled="False" WidthRequest="120"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="2" Text="{Binding CurrentWater}" Keyboard="Numeric"
                                           WidthRequest="120"
                                           IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEditCurrent}" />
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="3" Text="{Binding ConsumptionWater, StringFormat='Tổng {0} m³'}" WidthRequest="140"/>
                                    <Button Style="{DynamicResource TextPrimary}" Grid.Column="4" Text="Lưu"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SaveRowCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>