<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.PaymentMeterEntryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ghi số điện/nước">

    <ScrollView>
        <VerticalStackLayout Padding="14" Spacing="12">

            <HorizontalStackLayout Spacing="8">
                <Button Text="Đồng bộ từ Google Sheet" Command="{Binding SyncSheetsCommand}" />
                <Button Text="Xác nhận chỉ số" Command="{Binding ConfirmReadingsCommand}" />
            </HorizontalStackLayout>

            <!-- Electric -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Điện" FontAttributes="Bold" FontSize="18" />
                    <CollectionView ItemsSource="{Binding MeterRooms}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" />
                                    <Entry Grid.Column="1" Placeholder="Chỉ số trước" Text="{Binding ElectricReading.Previous}" Keyboard="Numeric"/>
                                    <Entry Grid.Column="2" Placeholder="Chỉ số hiện tại" Text="{Binding ElectricReading.Current}" Keyboard="Numeric"/>
                                    <Label Grid.Column="3" Text="{Binding ElectricReading.Consumption, StringFormat='{0} kWh'}"/>
                                    <Entry Grid.Column="4" Placeholder="Giá/kWh" Text="{Binding ElectricReading.Rate}" Keyboard="Numeric" WidthRequest="100"/>
                                    <Label Grid.Column="5" Text="{Binding ElectricAmount, StringFormat='{0:N0} đ'}" HorizontalTextAlignment="End" WidthRequest="110"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Water -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Nước" FontAttributes="Bold" FontSize="18" />
                    <CollectionView ItemsSource="{Binding MeterRooms}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" />
                                    <Entry Grid.Column="1" Placeholder="Chỉ số trước" Text="{Binding WaterReading.Previous}" Keyboard="Numeric"/>
                                    <Entry Grid.Column="2" Placeholder="Chỉ số hiện tại" Text="{Binding WaterReading.Current}" Keyboard="Numeric"/>
                                    <Label Grid.Column="3" Text="{Binding WaterReading.Consumption, StringFormat='{0} m³'}"/>
                                    <Entry Grid.Column="4" Placeholder="Giá/m³" Text="{Binding WaterReading.Rate}" Keyboard="Numeric" WidthRequest="100"/>
                                    <Label Grid.Column="5" Text="{Binding WaterAmount, StringFormat='{0:N0} đ'}" HorizontalTextAlignment="End" WidthRequest="110"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>