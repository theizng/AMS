<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.PaymentMeterEntryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ghi số điện / nước">

    <ScrollView>
        <VerticalStackLayout Padding="14" Spacing="12">

            <!-- Source controls -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="8">
                    <Label Style="{DynamicResource TextPrimary}" Text="Nguồn dữ liệu" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                        <Entry Style="{DynamicResource TextPrimary}" Grid.Column="0"
                               Placeholder="URL Google Sheet (chia sẻ công khai) hoặc để trống nếu dùng file"
                               Text="{Binding SheetUrl}" />
                        <Button Style="{DynamicResource TextPrimary}" Grid.Column="1" Text="Nhập URL" Command="{Binding EnterUrlCommand}" />
                        <Button Style="{DynamicResource TextPrimary}" Grid.Column="2" Text="Chọn file" Command="{Binding PickFileCommand}" />
                    </Grid>
                    <HorizontalStackLayout Spacing="8">
                        <Button Style="{DynamicResource TextPrimary}" Text="Đồng bộ"
                                Command="{Binding SyncCommand}"
                                BackgroundColor="#E3F2FD" />
                        <Button Style="{DynamicResource TextPrimary}" Text="Xác nhận chỉ số"
                                Command="{Binding ConfirmCommand}"
                                BackgroundColor="#E8F5E9" />
                    </HorizontalStackLayout>
                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding SourceInfo}" FontSize="12" TextColor="#607D8B" />
                </VerticalStackLayout>
            </Frame>

            <!-- Electric -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6" Grid.Column="0">
                    <Label Text="Điện" FontAttributes="Bold" FontSize="18" Grid.Column="0" WidthRequest="50" />
                    <Label Text="Chỉ số tháng trước" FontAttributes="Bold" FontSize="18" Grid.Column="1" WidthRequest="200" />
                    <Label Text="Chỉ số hiện tại" FontAttributes="Bold" FontSize="18" Grid.Column="2" WidthRequest="130" Margin="0,0,190,0" />
                    </Grid>
                    <CollectionView ItemsSource="{Binding MeterRows}" SelectionMode="None" Grid.Column="1">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" WidthRequest="120"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="1" Placeholder="Chỉ số trước" Text="{Binding PreviousElectric}" Keyboard="Numeric" WidthRequest="110" Margin="0,0,100,0"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="2" Placeholder="Chỉ số hiện tại" Text="{Binding CurrentElectric}" Keyboard="Numeric" WidthRequest="110" Margin="0,0,20,0"/>
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="3" Text="{Binding ConsumptionElectric, StringFormat='Tổng {0} kWh'}" WidthRequest="120"/>
                                    <Button Style="{DynamicResource TextPrimary}" Grid.Column="4" Text="Lưu"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SaveRowCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </Frame>

            <!-- Water -->
            <Frame Padding="10" BorderColor="#CFD8DC" CornerRadius="10">
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6" Grid.Column="0">
                        <Label Text="Nước" FontAttributes="Bold" FontSize="18" Grid.Column="0" WidthRequest="50" />
                        <Label Text="Chỉ số tháng trước" FontAttributes="Bold" FontSize="18" Grid.Column="1" WidthRequest="200" />
                        <Label Text="Chỉ số hiện tại" FontAttributes="Bold" FontSize="18" Grid.Column="2" WidthRequest="130" Margin="0,0,190,0" />
                    </Grid>
                    <CollectionView ItemsSource="{Binding MeterRows}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="8" Padding="0,6">
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="0" Text="{Binding RoomCode}" FontAttributes="Bold" WidthRequest="120"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="1" Placeholder="Chỉ số trước" Text="{Binding PreviousWater}" Keyboard="Numeric" WidthRequest="110" Margin="0,0,100,0"/>
                                    <Entry Style="{DynamicResource TextPrimary}" Grid.Column="2" Placeholder="Chỉ số hiện tại" Text="{Binding CurrentWater}" Keyboard="Numeric" WidthRequest="110" Margin="0,0,20,0"/>
                                    <Label Style="{DynamicResource TextPrimary}" Grid.Column="3" Text="{Binding ConsumptionWater, StringFormat='Tổng {0} m³'}" WidthRequest="120"/>
                                    <Button Style="{DynamicResource TextPrimary}" Grid.Column="4" Text="Lưu"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SaveRowCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>