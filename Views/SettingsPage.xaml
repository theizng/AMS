<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.SettingsPage"
             Title="Cài đặt"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Text="Giao diện" FontAttributes="Bold" FontSize="18"
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <VerticalStackLayout Spacing="8">
                <RadioButton x:Name="RbSystem"  Content="Theo hệ thống" GroupName="ThemeOptions" />
                <RadioButton x:Name="RbLight"   Content="Chế độ sáng"    GroupName="ThemeOptions" />
                <RadioButton x:Name="RbDark"    Content="Chế độ tối"     GroupName="ThemeOptions" />
            </VerticalStackLayout>

            <Button Text="Chuyển đổi Sáng/Tối"
                    Clicked="OnToggleClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{DynamicResource SecondaryColor}" />

            <Label Text="Thay đổi áp dụng ngay lập tức."
                   TextColor="{DynamicResource SecondaryTextColor}" FontSize="12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>