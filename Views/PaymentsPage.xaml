<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.PaymentsPage"
             Title="Quản lý thanh toán">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Tạo hóa đơn"
                     Priority="0" Order="Primary"
                     Command="{Binding GenerateCommand}" />
        <ToolbarItem Text="Làm mới"
                     Priority="1" Order="Primary"
                     Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        <!-- Tháng -->
        <HorizontalStackLayout Spacing="8" Margin="0,0,0,8">
            <Label Text="Tháng:" VerticalOptions="Center" />
            <DatePicker Date="{Binding Month}" Format="MM/yyyy" />
        </HorizontalStackLayout>

        <!-- Tìm kiếm -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="0,0,0,10">
            <Entry Placeholder="Tìm theo mã phòng/ghi chú..."
                   Text="{Binding SearchText}" HorizontalOptions="FillAndExpand" />
            <Button Text="Tìm" Command="{Binding SearchCommand}" />
        </HorizontalStackLayout>

        <!-- Danh sách hóa đơn -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Invoices}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <Grid Padding="20">
                    <Label Text="Chưa có hóa đơn cho tháng này."
                           HorizontalOptions="Center" VerticalOptions="Center"
                           TextColor="#666" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6" Padding="12" HasShadow="True" BorderColor="#E0E0E0" CornerRadius="10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12">
                            <VerticalStackLayout Grid.RowSpan="3" Grid.Column="0" Spacing="4">
                                <Label Text="{Binding Room.RoomCode}" FontSize="18" FontAttributes="Bold" TextColor="#3C467B" />
                                <Label Text="{Binding BillingMonth, StringFormat='Tháng: {0:MM/yyyy}'}" />
                                <Label Text="{Binding TotalAmount, StringFormat='Tổng: {0:n0} VND'}" />
                                <Label Text="{Binding PaidAmount, StringFormat='Đã thu: {0:n0} VND'}" />
                                <Label Text="{Binding Outstanding, StringFormat='Còn thiếu: {0:n0} VND'}" TextColor="#E53935" />
                                <Label Text="{Binding Status}" TextColor="#50589C" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                <Button Text="Thu đủ" BackgroundColor="#22C55E" TextColor="White"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.MarkPaidCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Thu 1 phần" BackgroundColor="#F59E0B" TextColor="White"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RecordPartialCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Chưa trả" BackgroundColor="#DC2626" TextColor="White"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.MarkUnpaidCommand}"
                                        CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
