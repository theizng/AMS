<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.PaymentsPage"
             Title="Quản lý thanh toán"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0"
                             Padding="0,10,0,10"
                             BackgroundColor="#6E8CFB">
            <Image Source="payment_icon.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center" />
            <Label Text="QUẢN LÝ THANH TOÁN"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,40,0,0"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Nội dung -->
        <Border Grid.Row="1"
                Margin="20,70,20,0"
                StrokeShape="RoundRectangle 10"
                Stroke="LightGray"
                BackgroundColor="White"
                StrokeThickness="1"
                VerticalOptions="Start">

            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Tra cứu và gửi thông báo thanh toán"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20" />

                <!-- Bộ lọc -->
                <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="10">
                    <Entry Placeholder="Năm" Text="{Binding Year}" Keyboard="Numeric" />
                    <Entry Placeholder="Tháng" Grid.Column="1" Text="{Binding Month}" Keyboard="Numeric" />
                    <Button Grid.Column="2"
                            Text="Tải"
                            TextColor="White"
                            BackgroundColor="#636CCB"
                            CornerRadius="10"
                            Command="{Binding LoadCommand}" />
                </Grid>

                <!-- Gửi thông báo -->
                <Button Text="Tạo Và Gửi thông báo tháng"
                        TextColor="White"
                        BackgroundColor="#6E8CFB"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding RefreshMonthlyCommand}" />

                <!-- Danh sách -->
                <CollectionView ItemsSource="{Binding Payments}"
                                Margin="0,10,0,0"
                                HeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#F5F6FA"
                                   CornerRadius="10"
                                   HasShadow="False"
                                   Margin="0,5">
                                <Grid Padding="10"
                                      ColumnDefinitions="*,Auto,Auto">
                                    <Label Text="{Binding RoomId}" TextColor="#3C467B" FontAttributes="Bold"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Amount, StringFormat='₫{0:N0}'}"
                                           TextColor="#50589C"
                                           HorizontalOptions="End"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding Status}"
                                           TextColor="#6E8CFB"
                                           HorizontalOptions="End"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
