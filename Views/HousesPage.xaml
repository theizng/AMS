<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.HousesPage"
             Title="Quản lý nhà ở">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Thêm nhà" Priority="0" Order="Primary"
                     Command="{Binding AddHouseCommand}" />
        <ToolbarItem Text="Làm mới" Priority="1" Order="Primary"
                     Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Search -->
        <HorizontalStackLayout Spacing="8" Margin="0,0,0,10">
            <Entry Placeholder="Tìm kiếm theo địa chỉ hoặc ghi chú..."
                   Text="{Binding SearchText}" HorizontalOptions="FillAndExpand" />
            <Button Text="Tìm" Command="{Binding SearchCommand}" />
        </HorizontalStackLayout>

        <!-- Houses list -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Houses}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <Grid Padding="20">
                    <Label Text="Chưa có nhà nào. Hãy nhấn 'Thêm nhà' để tạo mới."
                           HorizontalOptions="Center" VerticalOptions="Center"
                           TextColor="#666" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{DynamicResource Card}">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12">
                            <VerticalStackLayout Grid.RowSpan="3" Grid.Column="0" Spacing="6">
                                <Label Text="{Binding Address}" FontSize="16" FontAttributes="Bold" Style="{DynamicResource TextPrimary}" />
                                <Label Text="{Binding TotalRooms, StringFormat='Tổng số phòng: {0}'}" Style="{DynamicResource TextPrimary}" />
                                <Label Text="{Binding Notes}" Style="{DynamicResource TextSecondary}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                
                                <Button Text="Xem phòng"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewRoomsCommand}"
                                    CommandParameter="{Binding .}" />
                                
                                <Button Text="Sửa"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditHouseCommand}"
                                    CommandParameter="{Binding .}" />
                                
                                <Button Text="Xóa"
                                    Style="{DynamicResource DangerButton}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteHouseCommand}"
                                    CommandParameter="{Binding .}" />
                                
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>