<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.EditContractPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:AMS.Converters"
    Title="Hợp đồng">

   
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InvertBoolConverter x:Key="InvertBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="16">

            <!-- Header -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding Editable.ContractNumber, StringFormat='Số: {0}'}"
                           FontAttributes="Bold" FontSize="18"/>
                    <Label Text="{Binding Editable.RoomCode, StringFormat='Phòng: {0}'}" FontSize="14"/>
                    <Label Text="{Binding Editable.StatusVi}" TextColor="#455A64" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Dates & Rent -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="0">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Ngày bắt đầu"/>
                            <DatePicker Date="{Binding StartDate}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Ngày kết thúc"/>
                            <DatePicker Date="{Binding EndDate}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Ngày thu tiền (1..28)"/>
                            <Entry Keyboard="Numeric" Text="{Binding DueDay}" Placeholder="5" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnSpacing="12" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Giá thuê / tháng"/>
                            <Entry Keyboard="Numeric" Text="{Binding RentAmount}" Placeholder="0" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Đặt cọc"/>
                            <Entry Keyboard="Numeric" Text="{Binding SecurityDeposit}" Placeholder="0" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Trả cọc sau (ngày)"/>
                            <Entry Keyboard="Numeric" Text="{Binding DepositReturnDays}" Placeholder="7" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Limits -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Số người tối đa"/>
                        <Entry Keyboard="Numeric" Text="{Binding MaxOccupants}" Placeholder="1" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Xe máy tối đa"/>
                        <Entry Keyboard="Numeric" Text="{Binding MaxBikeAllowance}" Placeholder="1" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Payment & Late -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Phương thức thanh toán"/>
                    <Editor HeightRequest="60" Text="{Binding PaymentMethods}" Placeholder="Chuyển khoản, tiền mặt..." IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    <Label Text="Chính sách trễ hạn"/>
                    <Editor HeightRequest="60" Text="{Binding LateFeePolicy}" Placeholder="Phí trễ hạn, số ngày ân hạn..." IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Property Description -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Mô tả tài sản"/>
                    <Editor HeightRequest="80" Text="{Binding PropertyDescription}" Placeholder="Địa chỉ, tiện ích, chi tiết phòng..." IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tenants Snapshot -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Người thuê (snapshot)" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding Editable.Tenants}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Phone}" TextColor="#607D8B"/>
                                    <Label Text="{Binding Email}" TextColor="#1976D2"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Label Text="Sau khi kích hoạt, thay đổi người thuê sẽ đánh dấu 'Phụ lục'."
                           FontSize="12" TextColor="#78909C"/>
                </VerticalStackLayout>
            </Frame>

            <!-- PDF -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Link PDF hợp đồng"/>
                    <Entry Placeholder="https://..." Text="{Binding PdfUrl}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Primary Actions -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Lưu" Command="{Binding SaveCommand}" WidthRequest="110" IsVisible="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                <Button Text="Tạo PDF" Command="{Binding GeneratePdfCommand}" WidthRequest="110" IsVisible="{Binding CanGeneratePdf}"/>
                <Button Text="Gửi PDF" Command="{Binding SendContractEmailCommand}" WidthRequest="110" IsVisible="{Binding CanSendEmail}"/>
                <Button Text="Kích hoạt" Command="{Binding ActivateCommand}" WidthRequest="110" IsVisible="{Binding CanActivate}"/>
                <Button Text="Chấm dứt" Command="{Binding TerminateCommand}" WidthRequest="110" IsVisible="{Binding CanTerminate}" BackgroundColor="#FFECB3"/>
            </HorizontalStackLayout>

            <!-- Addendum Actions -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Tạo phụ lục" Command="{Binding CreateAddendumCommand}" WidthRequest="130" IsVisible="{Binding CanCreateAddendum}"/>
                <Button Text="Lịch sử" Command="{Binding ViewHistoryCommand}" WidthRequest="110" IsVisible="{Binding IsPersisted}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>