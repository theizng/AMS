<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.EditContractPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:AMS.Converters"
    Title="Hợp đồng">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InvertBoolConverter x:Key="InvertBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="16">

            <!-- Header -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="4">
                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Editable.ContractNumber, StringFormat='Số: {0}'}"
                           FontAttributes="Bold" FontSize="18"/>
                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Editable.RoomCode, StringFormat='Phòng: {0}'}" FontSize="14"/>
                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Editable.StatusVi}" TextColor="#455A64" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Dates & Rent -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="0">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0">
                            <Label Style="{DynamicResource TextPrimary}" Text="Ngày bắt đầu"/>
                            <DatePicker Style="{DynamicResource TextPrimary}" Date="{Binding StartDate}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Style="{DynamicResource TextPrimary}" Text="Ngày kết thúc"/>
                            <DatePicker Style="{DynamicResource TextPrimary}" Date="{Binding EndDate}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Style="{DynamicResource TextPrimary}" Text="Ngày thu tiền (1..28)"/>
                            <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding DueDay}" Placeholder="5" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnSpacing="12" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0">
                            <Label Style="{DynamicResource TextPrimary}" Text="Giá thuê / tháng"/>
                            <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding RentAmount}" Placeholder="0" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Style="{DynamicResource TextPrimary}" Text="Đặt cọc"/>
                            <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding SecurityDeposit}" Placeholder="0" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Style="{DynamicResource TextPrimary}" Text="Trả cọc sau (ngày)"/>
                            <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding DepositReturnDays}" Placeholder="7" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Limits -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <VerticalStackLayout Grid.Column="0">
                        <Label Style="{DynamicResource TextPrimary}" Text="Số người tối đa"/>
                        <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding MaxOccupants}" Placeholder="1" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Style="{DynamicResource TextPrimary}" Text="Xe máy tối đa"/>
                        <Entry Style="{DynamicResource TextPrimary}" Keyboard="Numeric" Text="{Binding MaxBikeAllowance}" Placeholder="1" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Payment & Late -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Label Style="{DynamicResource TextPrimary}" Text="Phương thức thanh toán"/>
                    <Editor Style="{DynamicResource TextPrimary}" HeightRequest="60" Text="{Binding PaymentMethods}" Placeholder="Chuyển khoản, tiền mặt..." IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                    <Label Style="{DynamicResource TextPrimary}" Text="Chính sách trễ hạn"/>
                    <Editor Style="{DynamicResource TextPrimary}" HeightRequest="60" Text="{Binding LateFeePolicy}" Placeholder="Phí trễ hạn, số ngày ân hạn..." IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Property Description -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Label Style="{DynamicResource TextPrimary}" Text="Mô tả tài sản"/>
                    <Editor Style="{DynamicResource TextPrimary}" HeightRequest="80"
                            Text="{Binding PropertyDescription}"
                            IsReadOnly="{Binding IsReadOnly}"
                            Placeholder="Địa chỉ, tiện ích, chi tiết phòng..."/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tenants Snapshot -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="6">
                    <Label Style="{DynamicResource TextPrimary}" Text="Người thuê (snapshot)" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding Editable.Tenants}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="6">
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Phone}" TextColor="#607D8B"/>
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Email}" TextColor="#1976D2"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Label Style="{DynamicResource TextPrimary}" Text="Sau khi kích hoạt, thay đổi người thuê sẽ đánh dấu 'Phụ lục'."
                           FontSize="12" TextColor="#78909C"/>
                </VerticalStackLayout>
            </Frame>

            <!-- PDF -->
            <Frame Padding="12" CornerRadius="12" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="6">
                    <Label Style="{DynamicResource TextPrimary}" Text="Link PDF (phụ lục gần nhất)"/>
                    <Entry Style="{DynamicResource TextPrimary}" Placeholder="https://..." Text="{Binding PdfUrl}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Primary Actions -->

            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">

                <!-- Draft flow: must create & send contract PDF before Activate -->
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Tạo PDF hợp đồng và gửi"
                            Command="{Binding GenerateAndSendContractPdfCommand}"
                            WidthRequest="220"
                            IsVisible="{Binding CanGenerateContractPdfAndSend}" />
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Kích hoạt"
                            Command="{Binding ActivateCommand}"
                            WidthRequest="110"
                            IsVisible="{Binding CanActivate}" />
                </HorizontalStackLayout>

                <!-- Addendum flow -->
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Tạo PDF phụ lục"
                            Command="{Binding GeneratePdfCommand}"
                            WidthRequest="150"
                            IsVisible="{Binding CanGeneratePdf}" />
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Gửi phụ lục PDF"
                            Command="{Binding SendAddendumEmailCommand}"
                            WidthRequest="150"
                            IsVisible="{Binding CanSendAddendumEmail}" />
                    <!-- Keep Save for Draft editing -->
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Lưu"
                            Command="{Binding SaveCommand}"
                            WidthRequest="110"
                            IsVisible="{Binding IsDraft}" />
                </HorizontalStackLayout>

                <!-- Addendum creation -->
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Button Style="{DynamicResource TextPrimary}"
                            Text="Tạo phụ lục"
                            Command="{Binding CreateAddendumCommand}"
                            WidthRequest="130"
                            IsVisible="{Binding CanCreateAddendum}" />
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>