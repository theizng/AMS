<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.ReportRevenuePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AMS.ViewModels"
    xmlns:mc="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    Title="Báo cáo Doanh thu">

    <ScrollView>
        <VerticalStackLayout Padding="14" Spacing="14">

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame Padding="12" CornerRadius="10" BorderColor="#CFD8DC">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Tổng doanh thu" FontAttributes="Bold"/>
                        <Label Text="{Binding TotalRevenue, StringFormat='{0:N0} đ'}"
                               FontSize="18" TextColor="#1B5E20"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame Padding="12" CornerRadius="10" BorderColor="#CFD8DC">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Doanh thu chưa thu" FontAttributes="Bold"/>
                        <Label Text="{Binding UnpaidRevenue, StringFormat='{0:N0} đ'}"
                               FontSize="18" TextColor="#C62828"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Frame Padding="10" CornerRadius="10" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Grid ColumnDefinitions="Auto,*,Auto,*,Auto" ColumnSpacing="8">
                        <Label Grid.Column="0" Text="Từ ngày" VerticalTextAlignment="Center"/>
                        <DatePicker Grid.Column="1" Date="{Binding FromDate}" />
                        <Label Grid.Column="2" Text="Đến ngày" VerticalTextAlignment="Center"/>
                        <DatePicker Grid.Column="3" Date="{Binding ToDate}" />
                        <Button Grid.Column="4" Text="Lọc" Command="{Binding FilterCommand}" />
                    </Grid>

                    <HorizontalStackLayout Spacing="8">
                        <Button Text="Xuất PDF" Command="{Binding ExportPdfCommand}" />
                        <Button Text="Xuất Excel" Command="{Binding ExportExcelCommand}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="10" CornerRadius="10" BorderColor="#CFD8DC">
                <VerticalStackLayout>
                    <Label Text="Doanh thu theo tháng" FontAttributes="Bold"/>
                    <mc:ChartView HeightRequest="220" Chart="{Binding RevenueChart}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>