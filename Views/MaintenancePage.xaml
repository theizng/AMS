<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.MaintenancePage"
             Title="Quản lý bảo trì & sự cố"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0"
                             Padding="0,10,0,10"
                             BackgroundColor="#50589C">
            <Image Source="maintenance_icon.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center" />
            <Label Text="QUẢN LÝ BẢO TRÌ & SỰ CỐ"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,40,0,0"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Nội dung -->
        <Border Grid.Row="1"
                Margin="20,70,20,0"
                StrokeShape="RoundRectangle 10"
                Stroke="LightGray"
                BackgroundColor="White"
                StrokeThickness="1"
                VerticalOptions="Start">

            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Danh sách yêu cầu bảo trì"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20" />

                <Button Text="Thêm yêu cầu mới"
                        TextColor="White"
                        BackgroundColor="#636CCB"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding AddNewCommand}" />

                <!-- Danh sách sự cố -->
                <CollectionView ItemsSource="{Binding Items}"
                                Margin="0,10,0,0"
                                HeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#F5F6FA"
                                   CornerRadius="10"
                                   HasShadow="False"
                                   Margin="0,5">
                                <Grid Padding="10"
                                      RowDefinitions="Auto,Auto"
                                      ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding Code}"
                                           FontAttributes="Bold"
                                           TextColor="#3C467B"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Status}"
                                           TextColor="#6E8CFB"
                                           HorizontalOptions="End"/>
                                    <Label Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           TextColor="#50589C"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
