<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.PaymentSettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Cài đặt thanh toán">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Thông tin chuyển khoản" FontAttributes="Bold" />
            <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                <Label Grid.Row="0" Grid.Column="0" Text="Tên tài khoản" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="0" Grid.Column="1" Text="{Binding NameAccount}" Placeholder="Nguyễn Văn A" />

                <Label Grid.Row="1" Grid.Column="0" Text="Số tài khoản" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="1" Grid.Column="1" Text="{Binding BankAccount}" Keyboard="Numeric" Placeholder="123456789" />

                <Label Grid.Row="2" Grid.Column="0" Text="Ngân hàng" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="2" Grid.Column="1" Text="{Binding BankName}" Placeholder="Vietcombank" />

                <Label Grid.Row="3" Grid.Column="0" Text="Chi nhánh" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="3" Grid.Column="1" Text="{Binding Branch}" Placeholder="CN Thủ Đức" />
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

            <Label Text="Thiết lập chu kỳ" FontAttributes="Bold" />
            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                <Label Grid.Row="0" Grid.Column="0" Text="Ngày thu tiền" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="0" Grid.Column="1" Text="{Binding DefaultDueDay}" Keyboard="Numeric" Placeholder="1..28" />

                <Label Grid.Row="1" Grid.Column="0" Text="Ngày ân hạn" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="1" Grid.Column="1" Text="{Binding GraceDays}" Keyboard="Numeric" Placeholder="số ngày" />

                <Label Grid.Row="2" Grid.Column="0" Text="Phí trễ hạn (đ)" VerticalTextAlignment="Center"/>
                <Entry Grid.Row="2" Grid.Column="1" Text="{Binding LateFeeRate}" Keyboard="Numeric" Placeholder="50000" />
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

            <HorizontalStackLayout Spacing="10" Margin="0,8,0,0">
                <Button Text="Tải" Command="{Binding LoadCommand}" />
                <Button Text="Lưu" Command="{Binding SaveCommand}" />
                <Label Text="{Binding Status}" VerticalTextAlignment="Center" TextColor="#607D8B" FontSize="12"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>