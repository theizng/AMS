<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.ForgotPasswordPage"
             xmlns:converters="clr-namespace:AMS.Converters"
             Title="Quên mật khẩu">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="24" Spacing="16">
        <Label Text="Quên mật khẩu" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="Nhập email quản trị đã đăng ký để nhận mật khẩu tạm thời."
               FontSize="14" TextColor="#555" LineBreakMode="WordWrap"/>
        <Entry Placeholder="Email quản trị" Keyboard="Email" Text="{Binding Email}" />
        <Button Text="Gửi mật khẩu tạm thời"
                Command="{Binding ResetCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBoolConverter}}"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        <Label Text="{Binding StatusMessage}"
               TextColor="{Binding Success, Converter={StaticResource BoolToColorConverter}}"
               LineBreakMode="WordWrap"/>
        <Button Text="Quay lại đăng nhập"
                BackgroundColor="#EEEEEE"
                TextColor="#333333"
                Command="{Binding BackCommand}"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>