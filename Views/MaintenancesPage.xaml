<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.MaintenancesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Bảo trì">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Đồng bộ phòng" Priority="0" Order="Primary" Command="{Binding SyncRoomsCommand}" />
        <ToolbarItem Text="Nhập URL" Priority="2" Order="Primary" Command="{Binding ImportUrlCommand}" />
        <ToolbarItem Text="Làm mới" Priority="3" Order="Primary" Command="{Binding RefreshCommand}" />
        <ToolbarItem Text="Nhập Excel" Priority="4" Order="Secondary" Command="{Binding ImportSheetCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="12" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8">
            <Entry
                Placeholder="Tìm theo nhà, phòng, mô tả, người thuê..."
                HorizontalOptions="FillAndExpand"
                Text="{Binding SearchText}" />
            <Button Text="Tìm" Command="{Binding SearchCommand}" />
        </HorizontalStackLayout>

        <!-- Status filter -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Label Text="Trạng thái:" VerticalOptions="Center" />
            <Picker
                WidthRequest="180"
                ItemsSource="{Binding StatusOptions}"
                SelectedItem="{Binding SelectedStatus}" />
            <Button Text="Xóa lọc" Command="{Binding ClearFilterCommand}" />
        </HorizontalStackLayout>

        <!-- List -->
        <RefreshView
            Grid.Row="2"
            IsRefreshing="{Binding IsRefreshing}"
            Command="{Binding RefreshCommand}">
            <CollectionView
                ItemsSource="{Binding Items}"
                SelectionMode="None">

                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label
                            Text="Chưa có dữ liệu bảo trì. Nhấn 'Nhập URL' để liên kết Google Sheet."
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            TextColor="#666" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,6"
                            Padding="12"
                            HasShadow="True"
                            BorderColor="#E0E0E0"
                            CornerRadius="10">
                            <Grid ColumnSpacing="12" RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Row 1: ID + Category + Priority badge -->
                                <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="10">
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding RequestId, StringFormat='ID: {0}'}"
                                           FontAttributes="Bold" />
                                    <Label Style="{DynamicResource TextPrimary}" Text="•" TextColor="#CCC"/>
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding Category}" FontAttributes="Bold" />
                                    <Border Padding="8,2" StrokeThickness="0" Background="#EEE">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Label Style="{DynamicResource TextPrimary}" Text="{Binding PriorityVi, StringFormat='Ưu tiên: {0}'}" />
                                        
                                        <Border.Triggers>
                                            <DataTrigger  TargetType="Border" Binding="{Binding PriorityVi}" Value="Thấp">
                                                <Setter Property="Background" Value="#C8E6C9" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Border" Binding="{Binding PriorityVi}" Value="Trung bình">
                                                <Setter Property="Background" Value="#FFE0B2" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Border" Binding="{Binding PriorityVi}" Value="Cao">
                                                <Setter Property="Background" Value="#FFCDD2" />
                                            </DataTrigger>
                                        </Border.Triggers>
                                    </Border>
                                </HorizontalStackLayout>

                                <!-- Row 2: Description -->
                                <Label Grid.Row="1" Grid.ColumnSpan="2" Style="{DynamicResource TextPrimary}"
                                       Text="{Binding Description}"
                                       LineBreakMode="WordWrap" />

                                <!-- Row 3: Created date + Tenant name + phone -->
                                <HorizontalStackLayout Grid.Row="2" Spacing="14">
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding CreatedDate, StringFormat='Ngày khởi tạo: {0:yyyy-MM-dd}'}" />
                                    <Label Style="{DynamicResource TextPrimary}" Text="|" TextColor="#CCC"/>
                                    <Label Style="{DynamicResource TextPrimary}" Text="{Binding TenantName, StringFormat='Người thuê: {0}'}" />
                                    <Label Style="{DynamicResource TextPrimary}" Text="|" TextColor="#CCC"/>
                                    <HorizontalStackLayout Spacing="6">
                                        <Label Style="{DynamicResource TextPrimary}" Text="SĐT:" />
                                        <Label Style="{DynamicResource TextPrimary}" Text="{Binding TenantPhone}" TextColor="#1976D2">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PhoneTapCommand}"
                                                    CommandParameter="{Binding TenantPhone}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>

                                <!-- Row 4: Estimated cost (hide when null) -->
                                <Label Grid.Row="3" Grid.Column="0"
                                       Style="{DynamicResource TextPrimary}" Text="{Binding EstimatedCost, StringFormat='Chi phí ước tính: {0:N0} đ'}">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding EstimatedCost}" Value="{x:Null}">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <!-- Right column: Status badge + Update button -->
                                <VerticalStackLayout Grid.Row="0" Grid.RowSpan="4" Grid.Column="1"
                                                     Spacing="8" VerticalOptions="Start" HorizontalOptions="End">
                                    <Border Padding="8,4" Background="#EEE" StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Label Style="{DynamicResource TextPrimary}" Text="{Binding StatusVi}" />
                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border" Binding="{Binding StatusVi}" Value="Chưa xử lý">
                                                <Setter Property="Background" Value="#FFF3CD" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Border" Binding="{Binding StatusVi}" Value="Đang xử lý">
                                                <Setter Property="Background" Value="#B3E5FC" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Border" Binding="{Binding StatusVi}" Value="Đã xử lý">
                                                <Setter Property="Background" Value="#C8E6C9" />
                                            </DataTrigger>
                                        </Border.Triggers>
                                    </Border>

                                    <Button
                                        Style="{DynamicResource TextPrimary}" Text="Cập nhật"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UpdateRequestCommand}"
                                        CommandParameter="{Binding .}" />
                                    <Button
                                        Style="{DynamicResource TextPrimary}" Text="Xóa"
                                        BackgroundColor="#FFCDD2"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteRequestCommand}"
                                        CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>