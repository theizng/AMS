<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AMS.Views.LoginPage"
    Title="Login">

    <VerticalStackLayout
        Padding="40"
        Spacing="20"
        VerticalOptions="Center">

        <Label Text="Quản lý thuê nhà" FontSize="28" HorizontalOptions="Center" />
        <Label Text="Đăng nhập để tiếp tục" FontSize="18" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Tên đăng nhập" />
        <Entry x:Name="PasswordEntry" Placeholder="Mật khẩu" IsPassword="True" />

        <Button Text="Đăng nhập" BackgroundColor="Grey" Command="{Binding LoginCommand}" />

        <Label Text="{Binding LoginMessage}" TextColor="Red" FontSize="14" HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>