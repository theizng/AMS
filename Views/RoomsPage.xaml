<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:AMS.Converters"
             x:Class="AMS.Views.RoomsPage"
             Title="Quản lý phòng">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:StatusColorConverter x:Key="StatusColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Thêm phòng" Priority="0" Order="Primary"
                     Command="{Binding AddRoomCommand}" />
        <ToolbarItem Text="Làm mới" Priority="1" Order="Primary"
                     Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <!-- CHANGED: add one more Auto row for the status filter -->
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10" RowSpacing="10">
        <!-- Search -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8">
            <Entry Placeholder="Tìm theo mã phòng hoặc ghi chú..."
                   Text="{Binding SearchText}" HorizontalOptions="FillAndExpand" />
            <Button Text="Tìm" BackgroundColor="#6E8CFB" Command="{Binding SearchCommand}" />
        </HorizontalStackLayout>

        <!-- NEW: Status filter row -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Picker Title="Trạng thái"
                    ItemsSource="{Binding StatusOptions}"
                    SelectedItem="{Binding SelectedStatusText}"
                    HorizontalOptions="FillAndExpand" />
            <Button Grid.Row="1"
            Text="Xóa bộ lọc"
            Command="{Binding ClearFilterCommand}"
            BorderWidth="1"
            CornerRadius="16"
            Padding="12,4"
            FontSize="13"
            HeightRequest="32"
            MinimumWidthRequest="0"
            HorizontalOptions="Start"
            Margin="0,0,0,0" />
        </HorizontalStackLayout>

        <!-- Note on button (moved to row 2) -->
        <Label Grid.Row="2"
               Text="Nhấn 'Xem chi tiết' để xem thông tin đầy đủ của phòng cụ thể."
               TextColor="Black" FontSize="12" HorizontalOptions="Center" />

        <!-- Pull-to-refresh (moved to row 3) -->
        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Rooms}"
                            SelectionMode="None">
                <!-- No selection—just buttons -->
                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label Text="Chưa có phòng nào. Hãy nhấn 'Thêm phòng' để tạo mới."
                               HorizontalOptions="Center" VerticalOptions="Center"
                               TextColor="#666" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,6" Padding="25" HasShadow="True" BorderColor="#E0E0E0" CornerRadius="30">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                <!-- Info -->
                                <VerticalStackLayout Grid.RowSpan="4" Grid.Column="0" Spacing="0">
                                    <HorizontalStackLayout Spacing="15">
                                        <Label Text="{Binding RoomCode}" FontSize="19" FontAttributes="Bold" />
                                        <!-- Badge -->
                                        <Border BackgroundColor="#F4F4F4" Padding="10,4">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding RoomStatus}"
                                                   TextColor="{Binding RoomStatus, Converter={StaticResource StatusColorConverter}}"
                                                   FontAttributes="Bold" />
                                        </Border>
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding House.Address, StringFormat='Nhà: {0}'}"
                                           IsVisible="{Binding House}" />
                                    <Label Text="{Binding Area, StringFormat='Diện tích: {0:N0} m²'}" />
                                    <Label Text="{Binding Price, StringFormat='Giá: {0:N0} đ'}" />
                                    <Label>
                                        <Label.Text>
                                            <MultiBinding StringFormat="Có {0}/{1} người ở hiện tại">
                                                <Binding Path="ActiveOccupants" />
                                                <Binding Path="MaxOccupants" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                    <Label Text="{Binding Notes}" TextColor="#777" FontSize="12" />
                                </VerticalStackLayout>

                                <!-- Actions -->
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Button Text="Xem chi tiết"
                                            BackgroundColor="ForestGreen" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewDetailCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="Sửa"
                                            BackgroundColor="DarkOrange" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditRoomCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="Xóa"
                                            BackgroundColor="#BF092F" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteRoomCommand}"
                                            CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>