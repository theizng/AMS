<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:AMS.Converters"
             x:Class="AMS.Views.RoomsPage"
             Title="Quản lý phòng">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:StatusColorConverter x:Key="StatusColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Thêm phòng" Priority="0" Order="Primary"
                     Command="{Binding AddRoomCommand}" />
        <ToolbarItem Text="Làm mới" Priority="1" Order="Primary"
                     Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="10" RowSpacing="10">
        <!-- Search -->
        <HorizontalStackLayout Spacing="8">
            <Entry Placeholder="Tìm theo mã phòng hoặc ghi chú..."
                   Text="{Binding SearchText}" HorizontalOptions="FillAndExpand" />
            <Button Text="Tìm" BackgroundColor="#6E8CFB" Command="{Binding SearchCommand}" />
        </HorizontalStackLayout>

        <!-- Status filter with Apply/Clear -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Label Text="Trạng thái:" VerticalOptions="Center" />
            <Picker ItemsSource="{Binding StatusOptions}"
                    SelectedItem="{Binding SelectedStatusText}"
                    HorizontalOptions="Start" />
            <Button Text="Áp dụng" Command="{Binding ApplyFilterCommand}" />
            <Button Text="Xóa lọc" Command="{Binding ClearFilterCommand}" />
        </HorizontalStackLayout>

        <!-- Pull-to-refresh uses RefreshView -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Rooms}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label Text="Chưa có phòng nào. Hãy nhấn 'Thêm phòng' để tạo mới."
                               HorizontalOptions="Center" VerticalOptions="Center"
                               TextColor="#666" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,6" Padding="12" HasShadow="True" BorderColor="#E0E0E0" CornerRadius="10">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                <!-- Info -->
                                <VerticalStackLayout Grid.RowSpan="4" Grid.Column="0" Spacing="6">
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="{Binding RoomCode}" FontSize="18" FontAttributes="Bold" />
                                        <!-- Badge using Border for rounded corners -->
                                        <Border BackgroundColor="#F4F4F4" Padding="6,2">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding RoomStatus}"
                                                   TextColor="{Binding RoomStatus, Converter={StaticResource StatusColorConverter}}"
                                                   FontAttributes="Bold" />
                                        </Border>
                                    </HorizontalStackLayout>

                                    <!-- Show house address when listing all houses -->
                                    <Label Text="{Binding House.Address, StringFormat='Nhà: {0}'}"
                                           IsVisible="{Binding House}" />

                                    <Label Text="{Binding Area, StringFormat='Diện tích: {0:N0} m²'}" />
                                    <Label Text="{Binding Price, StringFormat='Giá: {0:N0} đ'}" />
                                    <Label Text="{Binding Notes}" TextColor="#777" FontSize="12" />
                                </VerticalStackLayout>

                                <!-- Actions -->
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Button Text="Trạng thái..."
                                            BackgroundColor="#8E24AA" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ChangeStatusCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="Sửa"
                                            BackgroundColor="#2196F3" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditRoomCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="Xóa"
                                            BackgroundColor="#F44336" TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteRoomCommand}"
                                            CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>