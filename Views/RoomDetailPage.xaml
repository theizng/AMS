<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMS.Views.RoomDetailPage"
             Title="Chi tiết phòng">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Làm mới" Order="Primary" Priority="0" Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- 1) Thông tin phòng -->
            <Frame HasShadow="True" CornerRadius="16" Padding="16" BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Thông tin phòng" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding Room.RoomCode, StringFormat='Mã phòng: {0}'}" />
                    <Label Text="{Binding Room.RoomStatus, StringFormat='Trạng thái: {0}'}" />
                    <Label Text="{Binding Room.Area, StringFormat='Diện tích: {0:N0} m²'}" />
                    <Label Text="{Binding Room.Price, StringFormat='Giá thuê: {0:N0} đ'}" />
                    <Label>
                        <Label.Text>
                            <MultiBinding StringFormat="Có {0}/{1} người ở hiện tại">
                                <Binding Path="ActiveOccupancies.Count" />
                                <Binding Path="Room.MaxOccupants" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>

                    <!-- Hide Notes when empty/null without converter -->
                    <Label Text="{Binding Room.Notes, StringFormat='Ghi chú: {0}'}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding Room.Notes}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding Room.Notes}" Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <!-- Uncomment after you add these columns and migrate
          <Label Text="{Binding Room.LastWaterMeter, StringFormat='Chỉ số nước: {0:N0}'}" />
          <Label Text="{Binding Room.LastElectricMeter, StringFormat='Chỉ số điện: {0:N0}'}" />
          -->
                </VerticalStackLayout>
            </Frame>

            <!-- 2) Người thuê hiện tại -->
            <Frame HasShadow="True" CornerRadius="16" Padding="16" BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout>
                        <Label Text="Người thuê hiện tại" FontAttributes="Bold" FontSize="18" HorizontalOptions="StartAndExpand" />
                        <Button Text="Thêm người thuê" Command="{Binding AddTenantCommand}" />
                    </HorizontalStackLayout>

                    <CollectionView ItemsSource="{Binding ActiveOccupancies}" SelectionMode="None">
                        <CollectionView.EmptyView>
                            <Label Text="Chưa có người thuê." TextColor="#777" />
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Padding="4,6">
                                    
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Tenant.FullName}" FontAttributes="Bold" />
                                    
                                    <Button Grid.Row="0" Grid.Column="1" Text="Gỡ"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveTenantCommand}"
                                           CommandParameter="{Binding .}"
                                           BackgroundColor="#E53935" TextColor="White" />

                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="12">
                                        <Label Text="{Binding Tenant.PhoneNumber, StringFormat='📞 {0}'}" />
                                        <Label Text="{Binding MoveInDate, StringFormat='Ngày vào: {0:yyyy-MM-dd}'}" />
                                    </HorizontalStackLayout>
                                    
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- 3) Liên hệ khẩn cấp -->
            <Frame HasShadow="True" CornerRadius="16" Padding="16" BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout>
                        <Label Text="Liên hệ khẩn cấp" FontAttributes="Bold" FontSize="18" HorizontalOptions="StartAndExpand" />
                        <Button Text="Chọn người liên hệ" Command="{Binding ChooseEmergencyContactCommand}" />
                    </HorizontalStackLayout>

                    <Label Text="{Binding EmergencyContactName, StringFormat='Tên: {0}'}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding EmergencyContactName}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding EmergencyContactName}" Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Text="{Binding EmergencyContactPhone, StringFormat='SĐT: {0}'}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding EmergencyContactPhone}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding EmergencyContactPhone}" Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <HorizontalStackLayout Spacing="12">
                        <Button Text="Gọi" Command="{Binding CallPhoneCommand}" CommandParameter="{Binding EmergencyContactPhone}" />
                    </HorizontalStackLayout>
                    <Label Text="Chọn 1 người thuê hiện tại làm người liên hệ." FontSize="12" TextColor="#777" />
                </VerticalStackLayout>
            </Frame>

            <!-- 4) Xe của phòng -->
            <Frame HasShadow="True" CornerRadius="16" Padding="16" BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout>
                        <Label Text="Xe của phòng" FontAttributes="Bold" FontSize="18" HorizontalOptions="StartAndExpand" />
                        <Button Text="Thêm xe" Command="{Binding AddBikeCommand}" />
                    </HorizontalStackLayout>

                    <Label>
                        <Label.Text>
                            <MultiBinding StringFormat="Miễn phí: {0} xe • Hiện có: {1} • Phí thêm/xe: {2:N0} đ">
                                <Binding Path="Room.FreeBikeAllowance" />
                                <Binding Path="Bikes.Count" />
                                <Binding Path="Room.BikeExtraFee" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>

                    <CollectionView ItemsSource="{Binding Bikes}" SelectionMode="None">
                        <CollectionView.EmptyView>
                            <Label Text="Chưa có xe nào." TextColor="#777" />
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Padding="4,6">
                                    
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Plate, StringFormat='Biển số: {0}'}" FontAttributes="Bold" />
                                            <Label Text="{Binding OwnerName.FullName, StringFormat='Chủ sở hữu: {0}'}" />
                                        </VerticalStackLayout>

                                        <Button Text="Xóa" Grid.Row="0" Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveBikeCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#E53935" TextColor="White" />
                                    
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>