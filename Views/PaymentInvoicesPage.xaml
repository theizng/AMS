<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.PaymentInvoicesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hóa đơn thanh toán">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Làm mới" Priority="0" Order="Primary" Command="{Binding LoadCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="12" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8">
            <Button Style="{DynamicResource TextPrimary}" Text="◀" Command="{Binding PrevMonthCommand}" />
            <Label Style="{DynamicResource TextPrimary}" Text="Tháng:" VerticalOptions="Center" />
            <Picker Style="{DynamicResource TextPrimary}" WidthRequest="100"
                    ItemsSource="{Binding Months}"
                    SelectedItem="{Binding Month}" />
            <Label Style="{DynamicResource TextPrimary}" Text="Năm:" VerticalOptions="Center" />
            <Picker Style="{DynamicResource TextPrimary}" WidthRequest="120"
                    ItemsSource="{Binding Years}"
                    SelectedItem="{Binding Year}" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" VerticalOptions="Center" />
            <Button Style="{DynamicResource TextPrimary}" Text="▶" Command="{Binding NextMonthCommand}" />
        </HorizontalStackLayout>

        <!-- Status row -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Label Style="{DynamicResource TextPrimary}" Text="Trạng thái:" VerticalOptions="Center" />
            <Label Style="{DynamicResource TextPrimary}" Text="{Binding StatusText}" VerticalOptions="Center" TextColor="#666" />
        </HorizontalStackLayout>

        <!-- List -->
        <RefreshView
            Grid.Row="2"
            IsRefreshing="{Binding IsBusy}"
            Command="{Binding LoadCommand}">
            <CollectionView
                ItemsSource="{Binding Items}"
                SelectionMode="None">

                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label
                            Style="{DynamicResource TextPrimary}" Text="Chưa có dữ liệu hóa đơn cho tháng/năm đã chọn."
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            TextColor="#666" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,6"
                            Padding="12"
                            HasShadow="True"
                            BorderColor="#E0E0E0"
                            CornerRadius="10">
                            <Grid ColumnSpacing="12" RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Row 1: Room code + status pill -->
                                <Label Style="{DynamicResource TextPrimary}" Grid.Row="0" Grid.Column="0"
                                       Text="{Binding RoomCode}"
                                       FontAttributes="Bold" />

                                <Border Grid.Row="0" Grid.Column="1"
                                        Padding="8,4" StrokeThickness="0"
                                        HorizontalOptions="End" VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>

                                    <Label Style="{DynamicResource TextPrimary}" Text="Chưa có hóa đơn" TextColor="#8D6E63">
                                        <Label.Triggers Style="{DynamicResource TextPrimary}">
                                            <DataTrigger TargetType="Label" Binding="{Binding HasPdf}" Value="True">
                                                <Setter Property="Text" Value="Đã có hóa đơn" />
                                                <Setter Property="TextColor" Value="#2E7D32" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding HasPdf}" Value="True">
                                            <Setter Property="Background" Value="#C8E6C9" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding HasPdf}" Value="False">
                                            <Setter Property="Background" Value="#FFF3CD" />
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <!-- Row 2: Summary -->
                                <Label Style="{DynamicResource TextPrimary}" Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="{Binding Summary}"
                                       LineBreakMode="WordWrap"
                                       MaxLines="6" />

                                <!-- Row 3: Actions + LastResult -->
                                <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="8">
                                    <Button
                                        Style="{DynamicResource TextPrimary}" Text="Tạo/ghi đè PDF"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GeneratePdfCommand}"
                                        CommandParameter="{Binding .}" />
                                    <Button
                                        Style="{DynamicResource TextPrimary}" Text="Mở PDF"
                                        IsVisible="{Binding HasPdf}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenPdfCommand}"
                                        CommandParameter="{Binding .}" />
                                    <Label
                                        Style="{DynamicResource TextPrimary}" Text="{Binding LastResult}"
                                        TextColor="#607D8B"
                                        VerticalTextAlignment="Center"
                                        LineBreakMode="TailTruncation"
                                        HorizontalOptions="FillAndExpand" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>