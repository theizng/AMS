<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:AMS.Behaviors"
             x:Class="AMS.Views.EditTenantPage"
             Title="{Binding PageTitle}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Lưu" Priority="0" Order="Primary" Command="{Binding SaveCommand}" />
        <ToolbarItem Text="Hủy" Priority="1" Order="Primary" Command="{Binding CancelCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">
            <Label Text="Họ tên *" />
            <Entry Text="{Binding FullName}" Placeholder="VD: Nguyễn Văn A" />

            <Label Text="Số điện thoại *" />
            <Entry Text="{Binding PhoneNumber}"
                   Keyboard="Telephone"
                   Placeholder="VD: 090..."
                   MaxLength="15">
                <Entry.Behaviors>
                    <!-- Only digits; allow you to keep consistent with EditRoomPage -->
                    <behaviors:IntegerOnlyBehavior />
                </Entry.Behaviors>
            </Entry>

            <Label Text="CCCD/CMND *" />
            <Entry Text="{Binding IdCardNumber}"
                   Placeholder="Số giấy tờ"
                   Keyboard="Numeric"
                   MaxLength="12">
                <Entry.Behaviors>
                    <behaviors:IntegerOnlyBehavior />
                </Entry.Behaviors>
            </Entry>

            <Label Text="Email *" />
            <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="ví dụ: a@example.com" />

            <Label Text="Ngày sinh *" />
            <DatePicker Date="{Binding DateOfBirth}" />

            <Label Text="Địa chỉ thường trú (Quê quán) *" />
            <Entry Text="{Binding PermanentAddress}" Placeholder="ví dụ: Hà Nội"/>

            <Label Text="Ghi chú (nếu có)" />
            <Editor Text="{Binding Notes}" AutoSize="TextChanges" HeightRequest="100" Placeholder="ví dụ: Đi làm về trễ sau 11h đêm"/>

            <Label Text="Liên hệ khẩn cấp (mỗi dòng 1 mục) *" />
            <Editor Text="{Binding EmergencyContactsText}" AutoSize="TextChanges" HeightRequest="100" />

            <Button Text="Lưu" Command="{Binding SaveCommand}" BackgroundColor="#2196F3" TextColor="White" />
            <Button Text="Hủy" Command="{Binding CancelCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>