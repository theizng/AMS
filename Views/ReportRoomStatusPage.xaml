<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AMS.Views.ReportRoomStatusPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Trạng thái phòng">
    <ScrollView>
        <VerticalStackLayout Padding="14" Spacing="14">

            <Frame Padding="10" CornerRadius="10" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="8">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                        <Label Style="{DynamicResource TextPrimary}" Grid.Column="0" Text="Lọc trạng thái" VerticalTextAlignment="Center"/>
                        <Picker Style="{DynamicResource TextPrimary}" Grid.Column="1"
                                Title="Chọn trạng thái"
                                ItemsSource="{Binding StatusFilterOptions}"
                                SelectedItem="{Binding SelectedStatusFilter}" />
                        <Button Grid.Column="2" Text="Tải" Command="{Binding LoadCommand}" />
                    </Grid>

                    <HorizontalStackLayout Spacing="8">
                        <Button Style="{DynamicResource TextPrimary}" Text="Xuất PDF" Command="{Binding ExportPdfCommand}" />
                        <Button Style="{DynamicResource TextPrimary}" Text="Xuất Excel" Command="{Binding ExportExcelCommand}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="10" CornerRadius="10" BorderColor="#CFD8DC">
                <VerticalStackLayout Spacing="6">
                    <Label Style="{DynamicResource TextPrimary}" Text="Danh sách phòng" FontAttributes="Bold" FontSize="16"/>

                    <CollectionView ItemsSource="{Binding Rooms}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" Margin="0,6" CornerRadius="8" BorderColor="#E0E0E0">
                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                        <Label Style="{DynamicResource TextPrimary}" Grid.Column="0"
                                               Text="{Binding RoomCode}"
                                               FontAttributes="Bold" />
                                        <Border Grid.Column="1"
                                                Padding="8,4"
                                                StrokeThickness="0"
                                                Background="{Binding StatusColor}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6" />
                                            </Border.StrokeShape>
                                            <Label Style="{DynamicResource TextPrimary}" Text="{Binding StatusText}" FontSize="12"/>
                                        </Border>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>
                            <Label Style="{DynamicResource TextPrimary}" Text="Không có phòng."
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#777" />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>