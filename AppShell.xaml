<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:AMS.Views"
       x:Class="AMS.AppShell"
       Title="Phần mềm quản lý thuê phòng">

    <!-- Dashboard/Home: use DI via code-behind -->
    <ShellContent x:Name="DashboardShell"
                  Title="Dashboard"
                  Icon="dashboard_icon.png"
                  Route="MainPage" />

    <!-- Management Section -->
    <FlyoutItem Title="Quản lý" FlyoutIcon="management_icon.png">
        <!-- Houses via DI -->
        <ShellContent x:Name="HousesShell"
                      Title="Quản lý nhà ở"
                      Route="houses" />

        <!-- Tenants via DI -->
        <ShellContent x:Name="TenantsShell"
                      Title="Quản lý người thuê"
                      Route="tenants" />
    </FlyoutItem>

    <!-- FINANCIAL SECTION -->
    <FlyoutItem Title="Tài chính" FlyoutIcon="finance_icon.png">
        <ShellContent x:Name="PaymentsShell"
                      Title="Thanh toán"
                      Route="payments" />
        <ShellContent x:Name="ReportsShell"
                      Title="Báo cáo"
                      Route="reports" />
    </FlyoutItem>

    <!-- SETTINGS SECTION -->
    <FlyoutItem Title="Cài đặt" FlyoutIcon="settings_icon.png">
        <ShellContent x:Name="SettingsShell"
                      Title="Tùy chọn"
                      Route="settings" />
    </FlyoutItem>

    <!-- Logout Item -->
    <MenuItem Text="Đăng xuất" Clicked="OnLogOutClicked" IconImageSource="logout_icon.png" />
</Shell>