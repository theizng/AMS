<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:AMS.Views"
       x:Class="AMS.AppShell"
       Title="Phần mềm quản lý thuê phòng">

    <!-- Dashboard/Home: use DI via code-behind -->
    <ShellContent x:Name="DashboardShell"
                  Title="Dashboard"
                  Icon="dashboard_icon.png"
                  Route="MainPage" />

    <!-- Management Section -->
    <FlyoutItem Title="Quản lý" FlyoutIcon="management_icon.png">
        <!-- Houses via DI -->
        <ShellContent x:Name="HousesShell"
                      Title="Quản lý nhà ở"
                      Route="houses" />
        <!-- Tenants via DI -->
        <ShellContent x:Name="TenantsShell"
                      Title="Quản lý người thuê"
                      Route="tenants" />
        <!-- Maintainances via DI-->
        <ShellContent x:Name="MaintenancesShell"
                      Title="Danh sách bảo trì"
                      Route="maintenances" />
        <!-- Contracts via DI-->
        <ShellContent x:Name="ContractsShell"
                      Title="Quản lý hợp đồng"
                      Route="contracts" />
    </FlyoutItem>

    <!-- FINANCIAL SECTION -->
    <FlyoutItem Title="Tài chính" FlyoutIcon="finance_icon.png">
        <ShellContent x:Name="Payment_OverviewShell"
                      Title="Trang tổng quan"
                      Route="payment_overview" />
        
        <ShellContent x:Name="Payment_MeterEntryShell"
                      Title="Ghi số điện / nước"
                      Route="payment_meterentry" />
        
        <ShellContent x:Name="Payment_FeesShell"                     
                      Title="Chi phí"
                      Route="payment_fees" />
        
        <ShellContent x:Name="Payment_InvoicesShell"
                      Title="Hóa đơn"
                      Route="payment_invoices" />
        
        <ShellContent x:Name="Payment_SettingsShell"
                      Title="Thiết lập thanh toán"
                      Route="payment_settings" />
    </FlyoutItem>
    <!--REPORT SECTION-->
    <FlyoutItem Title="Báo cáo và thống kê" FlyoutIcon="report_icon.png">
        <ShellContent x:Name="ReportOverviewShell"
                  Title="Tổng quan"
                  Route="report" />
        
        <ShellContent x:Name="RevenueShell"
                  Title="Báo cáo doanh thu"
                  Route="report_revenue" />
        
        <ShellContent x:Name="UtilitiesShell"
                  Title="Báo cáo chi phí"
                  Route="report_utilities" />
        
        <ShellContent x:Name="ProfitShell"
                  Title="Báo cáo lợi nhuận"
                  Route="report_profit" />
        
        <ShellContent x:Name="RoomStatusShell"
                  Title="Báo cáo tình trạng phòng"
                  Route="report_roomstatus" />
        
        <ShellContent x:Name="DebtShell"
                  Title="Báo cáo công nợ"
                  Route="report_debt" />
    </FlyoutItem>

    <!-- SETTINGS SECTION -->
    <FlyoutItem Title="Cài đặt" FlyoutIcon="settings_icon.png">
        <ShellContent x:Name="SettingsShell"
                      Title="Tùy chọn"
                      Route="settings" />
    </FlyoutItem>

    <!-- Logout Item -->
    <MenuItem Text="Đăng xuất" Clicked="OnLogOutClicked" IconImageSource="logout_icon.png" />
</Shell>