<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AMS.Views"
    Title="Phần mềm quản lý dịch vụ cho thuê">

    <!-- Chỉ giữ lại MainPage -->
    <ShellContent
        Title="Trang chủ"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Thêm các trang khác sau khi bạn đã tạo chúng -->

    <!-- Ví dụ: Uncomment khi bạn đã tạo RoomListPage
    <ShellContent
        Title="Danh sách phòng"
        ContentTemplate="{DataTemplate local:RoomListPage}"
        Route="RoomListPage" /> 
    -->
</Shell>